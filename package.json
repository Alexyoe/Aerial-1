{
  "name": "aerial",
  "version": "1.1.0",
  "videoJSONVersion": "15.0.0",
  "description": "Apple TV screen saver for Windows",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrangeJedi/Aerial.git"
  },
  "author": "OrangeJedi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OrangeJedi/Aerial/issues"
  },
  "homepage": "https://github.com/OrangeJedi/Aerial#readme",
  "devDependencies": {
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0",
    "font-list-universal": "^1.0.0",
    "json-beautify": "^1.1.1",
    "request": "^2.88.2"
  },
  "build": {
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "perMachine": false
    },
    "portable": {
      "artifactName": "aerial.exe",
      "useZip": true
    },
    "files": ["!documentation/*", "!images/*"],
    "icon": "icon.ico",
    "productName": "Aerial"
  }
}
